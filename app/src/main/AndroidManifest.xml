<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ale.keychain">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/key"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:noHistory="true" />
        <activity android:name=".PasswordListActivity" />
        <activity
            android:name=".PasswordDetailActivity"
            android:theme="@style/NoActionbar" />
        <activity android:name=".NetworkingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NotificationActivity"
            android:parentActivityName=".NetworkingActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NetworkingActivity"/>
        </activity>
    </application>

</manifest>